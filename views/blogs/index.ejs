<div class="container">
    <h2>All Published Blogs</h2>
    <div class="filter-sort-section">
        <input type="text" id="search-title" placeholder="Search by Title">
        <input type="text" id="search-author" placeholder="Search by Author">
        <input type="text" id="search-tags" placeholder="Search by Tags (comma-separated)">
        <select id="sort-order">
            <option value="">Sort By</option>
            <option value="read_count:desc">Read Count (Desc)</option>
            <option value="read_count:asc">Read Count (Asc)</option>
            <option value="reading_time:desc">Reading Time (Desc)</option>
            <option value="reading_time:asc">Reading Time (Asc)</option>
            <option value="createdAt:desc">Newest First</option>
            <option value="createdAt:asc">Oldest First</option>
        </select>
        <button id="apply-filters">Apply Filters</button>
    </div>
    <div id="blogs-list" class="blog-grid">
        <!-- Blogs will be loaded here by JavaScript -->
        <p>Loading blogs...</p>
    </div>
    <div class="pagination">
        <button id="prev-page" disabled>Previous</button>
        <span id="current-page-info">Page 1 of 1</span>
        <button id="next-page" disabled>Next</button>
    </div>
</div>